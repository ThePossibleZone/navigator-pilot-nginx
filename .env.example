# Navigator Pilot Container Environment Variables
# Copy this file to .env and update the values as needed

# ----------------------------------------------------------------
# .env.api
# ----------------------------------------------------------------

# Database Configuration
DATABASE_URL=postgresql://navigator:navigatorpassword@postgres:5432/navigator
POSTGRES_USER=navigator
POSTGRES_PASSWORD=navigatorpassword
POSTGRES_DB=navigator

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_HEADERS=Content-Type,Authorization

# Letta Configuration
OPENAI_API_BASE=https://openrouter.ai/api/v1
OPENAI_API_KEY=your-openrouter-api-key
LETTA_BASE_URL=http://letta:8283

# Optional: Logging Configuration
LOG_LEVEL=debug
DEBUG=true

# API Config
TZ=UTC
PORT=3333
HOST=0.0.0.0
APP_KEY=your-app-key
NODE_ENV=development
DB_HOST=postgres
DB_PORT=5432
DB_USER=navigator
DB_PASSWORD=navigatorpassword
DB_DATABASE=navigator
SESSION_DRIVER=cookie
OPENROUTER_API_KEY=your-openrouter-api-key
AI_MODEL=anthropic/claude-sonnet-4
DRIVE_DISK=fs

# S3/LocalStack configuration (AWS creds moved to .env.localstack)
S3_BUCKET=navigator-artifacts
S3_ENDPOINT=http://localhost:4566
S3_FORCE_PATH_STYLE=true

# ----------------------------------------------------------------
# .env.letta
# ----------------------------------------------------------------

# Letta-specific environment variables
# Configuration for Letta AI agent service

# OpenRouter API configuration (primary AI provider)
# OPENAI_API_BASE is already defined in .env.api section
# OPENAI_API_KEY is already defined in .env.api section

# Letta database configuration
LETTA_PG_URI=postgresql://navigator:navigatorpassword@navigator-postgres:5432/letta

# Letta server configuration
# LETTA_BASE_URL is already defined in .env.api section
ADONIS_HOST=http://navigator-api:3333

# ----------------------------------------------------------------
# .env.web
# ----------------------------------------------------------------

VITE_API_BASE_URL=http://localhost
VITE_API_V1_BASE_URL=http://localhost/api/v1
VITE_APP_NAME=Navigator
